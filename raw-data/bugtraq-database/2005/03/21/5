	function loadfile($file)
	{
		global $_SKIN,$_SERVER;
		
		if(ereg("admin/",$_SERVER['REQUEST_URI']))	$prefix="../";
		else						$prefix="";
			
		$temp			=	implode("",file($prefix."templates/".$_SKIN['reptpl']."/tpl_".$file.".html"));
		$this->forme($temp);
		$this->isloaded[$file]	=	true;
	}
