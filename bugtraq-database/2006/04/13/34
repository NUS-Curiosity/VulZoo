	Open member.php
    GoTo Line :- 1030 ..


        if($mybb->input['url'])
			{
				redirect($mybb->input['url'], $lang->redirect_loggedin);
			}


        Replace It With

   		if($mybb->input['url'])
			{
		redirect(htmlspecialchars($mybb->input['url']), $lang->redirect_loggedin);
   			}
