fix:


///////////////////////////////////////
// Checks user is logged in          //
///////////////////////////////////////
if (($_SESSION['admin_area']=="Active")&&($admin_info['admin_status']=="Online")){
} else {
echo  "<script>document.location.href='admin_login.php'</script>"; 
exit(); //add code
}


