------[ 4.6.3 - socket option ]-----------------------------------------------

static int
open_socket(dest)
    char *dest;
{
    char *sep, *endp = NULL;
    int sock, port = -1;
    u_int32_t host;
    struct hostent *hent;
    ...
    sep = strchr(dest, ':');
    if (sep != NULL)
        port = strtol(sep+1, &endp, 10);
    if (port < 0 || endp == sep+1 || sep == dest) {
        error("Can't parse host:port for socket destination");
        return -1;
    }
    *sep = 0;
    host = inet_addr(dest);
    if (host == (u_int32_t) -1) {
        hent = gethostbyname(dest);
        if (hent == NULL) {
            error("%s: unknown host in socket option", dest);
            *sep = ':';
            return -1;
        }
        host = *(u_int32_t *)(hent->h_addr_list[0]);
    }

