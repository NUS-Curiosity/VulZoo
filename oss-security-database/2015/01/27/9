#ifndef IP_localhost                          /* Is "localhost" preresolved? */
     chad=COMSAThost;                                   /* nope, use default */
#else /* IP_localhost */
   { ...
   }
  else
#endif /* IP_localhost */
   { ...
     if(!(host=gethostbyname(chad))||!host->h_0addr_list)

