> timeLocal, dp->tzoffset, dp->strnew[1]); dp->strpta[1] =
> dp->strnew[1]; } else { -			struct tm *t = localtime((const time_t
> *) &timeLocal); +			struct tm *t = localtime(&timeLocal);
